<h1>All our flats (<%= @flats.count %>)</h1>

<div class="container">
  <div class="row">

    <% @flats.each do |f| %>
      <div class="col-xs-12 col-sm-4">
        <div class='card'>
          <div class='card-holder'>
            <div class="flat-image" style="background-image: url('https://picsum.photos/500/200');"></div>
          </div>
          <div class="flat-description">
            <h2><%= f.name %></h2>
            <p><%= f.description %></p>
            <div>
              <ul class="list-inline">
                <li><i class="fas fa-user-friends fa-2x"></i> <%= f.price_per_night %></li>
                <li><i class="fas fa-euro-sign fa-2x"></i><%= f.number_of_guests %></li>
              </ul>
            </div>
          </div>
          <div class="flat-actions">
            <ul class="list-inline">
              <li><%= link_to "More info", flats_path, style:"color: blue" %></li>
              <li><%= link_to "Edit", flats_path, style:"color: yellow"%></li>
              <li><%= link_to "Remove", flats_path, style:"color: red"%></li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>


  </div>
</div>

